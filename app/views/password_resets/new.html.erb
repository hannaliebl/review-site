<%= provide(:title, 'Reset Password') %>
<h1>Reset Password</h1>
<%= form_tag password_resets_path, :class => 'form-horizontal col-md-6 col-md-offset-3', :method => :post do %>
  <div class="form-group">
    <%= label_tag :email, "Email", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= text_field_tag :email, params[:email], :class => "form-control" %>
    </div>
  </div>
  <%= submit_tag "Reset Password", :class => "btn btn-lg btn-primary" %>
<% end %>
