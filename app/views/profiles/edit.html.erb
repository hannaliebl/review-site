<%= provide(:title, 'Edit Profile') %>
  <h1>Edit Profile</h1>
    <%= form_for [@user, @profile], :html => { :class => 'form-horizontal col-md-6 col-md-offset-3' } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
          <%= f.label :about, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :about, :class => 'form-control', :rows => "3" %>
        </div>
      </div>
      <div class="form-group">
          <%= f.label :type_of_lifter, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :type_of_lifter, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
          <%= f.label :location, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :location, :class => 'form-control' %>
        </div>
      </div>

      <%= f.submit "Save Changes", class: "btn btn-lg btn-primary" %>
    <% end %>


