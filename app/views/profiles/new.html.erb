<%= provide(:title, 'New Profile') %>
  <h1>New Profile</h1>
    <%= form_for [@user, @profile], :url => user_profile_path(current_user), :html => { :class => 'form-horizontal col-md-6 col-md-offset-3' } do |f| %>
      
      <div class="form-group">
          <%= f.label :about, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :about, :class => 'form-control', :rows => "3" %>
        </div>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox"> Powerlifter
          <%= f.check_box :lifter_type1 %>
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox"> Bodybuilder
          <%= f.check_box :lifter_type2 %>
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox"> Olympic
          <%= f.check_box :lifter_type3 %>
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox"> Strongman
          <%= f.check_box :lifter_type4 %>
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox"> Crossfit
          <%= f.check_box :lifter_type5 %>
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox"> Other (for cross training, etc.)
          <%= f.check_box :lifter_type6 %>
        </label>
      </div>
      <div class="form-group">
          <%= f.label :location, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :location, :class => 'form-control' %>
        </div>
      </div>

      <%= f.submit "Save Changes", class: "btn btn-lg btn-primary" %>
      <%= f.submit "Skip", class: "btn btn-lg btn-primary", :name => "skip" %>
    <% end %>


